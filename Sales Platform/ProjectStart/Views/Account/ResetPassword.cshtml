@model DataLayer.ViewModels.ResetPasswordViewModel

@{
    ViewBag.Title = "تغییر رمز عبور";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Signin</title>
    <!-- BOOTSTRAP CSS -->
    <link rel="stylesheet"
          href="/Content/assest/plugins/bootstrap5.3/css/bootstrap.min.css" />
    <!-- ICONS CSS -->
    <link rel="stylesheet"
          href="/Content/assest/plugins/icon/font/bootstrap-icons.css" />
    <link rel="stylesheet"
          href="/Content/assest/plugins/fontawesome-free-6.6.0-web/css/all.min.css" />
    <!-- MDB CSS -->
    <link rel="stylesheet" href="/Content/assest/plugins/mdb/css/mdb.rtl.min.css" />
    <!-- STYLE CSS -->
    <link rel="stylesheet" href="/Content/assest/css/style.css" />
</head>
@using (Html.BeginForm())
{
    <body>
        <section class="vh-100" style="background-color: #ffff" id="container">
            <div class="area">
                <ul class="shape">
                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
                </ul>
                <div class="container w-75 h-100">
                    <div class="row d-flex justify-content-center align-items-center h-100">
                        <div class="col-10 col-xl-6 col-lg-7 col-md-8">
                            <div class="card" style="border-radius: 1rem">
                                <div class="row g-0">
                                    <div class="col d-flex align-items-center">
                                        <div class="card-body p-4 p-lg-5 text-black">

                                            @Html.AntiForgeryToken()
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                        <form>
                                            <div class="d-flex align-items-center mb-3 pb-1"></div>
                                            <h4 class="mb-3 pb-3"
                                                style="letter-spacing: 1px; color: #424769">
                                                تغییر رمز عبور
                                            </h4>

                                            <div data-mdb-input-init class="form-outline mb-4">
                                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control form-control-lg", id = "PasswordInput" } })
                                                <i class="bi bi-eye-fill" id="eye"></i>
                                                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "form-label", style = "font-size: 15px" })
                                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                            </div>

                                            <div data-mdb-input-init class="form-outline mb-4">
                                                @Html.EditorFor(model => model.RePassword, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                                @Html.LabelFor(model => model.RePassword, htmlAttributes: new { @class = "form-label", style = "font-size: 15px" })
                                                @Html.ValidationMessageFor(model => model.RePassword, "", new { @class = "text-danger" })
                                            </div>

                                            <div class="pt-1 mb-5">
                                                <input type="submit"
                                                       data-mdb-ripple-init
                                                       data-mdb-ripple-duration="700ms"
                                                       id="loginButton"
                                                       class="btn btn-dark btn-lg btn-block"
                                                       style="background-color: #f9b17a; color: #424769" value="تغییر رمز عبور" />
                                            </div>
                                        </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <script src="/Content/assest/plugins/jq3/jquery-3.7.1.js"></script>
        <script src="/Content/assest/plugins/bootstrap5.3/js/bootstrap.min.js"></script>
        <script src="/Content/assest/plugins/mdb/js/mdb.umd.min.js"></script>
        <script src="/Content/assest/plugins/fontawesome-free-6.6.0-web/js/all.min.js"></script>
        <script src="/Content/assest/js/script.js"></script>
    </body>
}
</html>
